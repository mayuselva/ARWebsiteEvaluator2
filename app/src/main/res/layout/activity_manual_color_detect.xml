<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="shanefuzz.arwebsiteevaluator.UserProfile.UserProfile.App.TextEvaluation.VuforiaSamples.app.ColorDetect.ManualColorDetect">

    <ScrollView
        android:id="@+id/DcscrollView"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="375dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Font Color"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/insidetext1"
                android:layout_height="wrap_content"
                android:paddingLeft="95dp"
                android:text="click here to select color"/>

            <View
                android:id="@+id/color1"
                android:tag="click here"
                android:layout_width="match_parent"
                android:layout_height="25dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/text2"
                android:layout_height="wrap_content"
                android:text="Background Color"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/insidetext2"
                android:layout_height="wrap_content"
                android:paddingLeft="95dp"
                android:text="click here to select color"/>
            <View
                android:id="@+id/color2"
                android:layout_width="match_parent"
                android:layout_height="25dp"

            />
            <TextView
                android:id="@+id/text6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vibrant"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/insidetext6"
                android:layout_height="wrap_content"
                android:paddingLeft="95dp"
                android:text="click here to select color"/>

            <View
                android:id="@+id/color6"
                android:tag="click here"
                android:layout_width="match_parent"
                android:layout_height="25dp"

                />
            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VibrantLight"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/insidetext3"
                android:layout_height="wrap_content"
                android:paddingLeft="95dp"
                android:text="click here to select color"/>

            <View
                android:id="@+id/color3"
                android:tag="click here"
                android:layout_width="match_parent"
                android:layout_height="25dp"

                />
            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Muted"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/insidetext4"
                android:layout_height="wrap_content"
                android:paddingLeft="95dp"
                android:text="click here to select color"/>

            <View
                android:id="@+id/color4"
                android:tag="click here"
                android:layout_width="match_parent"
                android:layout_height="25dp"

                />
            <TextView
                android:id="@+id/text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MutedLight"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/insidetext5"
                android:layout_height="wrap_content"
                android:paddingLeft="95dp"
                android:text="click here to select color"/>

            <View
                android:id="@+id/color5"
                android:tag="click here"
                android:layout_width="match_parent"
                android:layout_height="25dp"

                />




        </LinearLayout>



    </ScrollView>
    <Button
        android:id="@+id/btncal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="395dp"
        android:layout_width="140dp"
        android:textColor="@color/white"
        android:layout_height="55dp"
        android:background="@color/colorPrimary"
        android:text="Calculate Overall Matching"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/textView" />
    <WebView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/webView1"
        android:layout_gravity="center_horizontal" />
    <ProgressBar
        android:id="@+id/progressbar2"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="54dp"
        android:layout_marginLeft="130dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp"
        android:layout_weight="0.16"
        android:indeterminate="true"
        android:visibility="gone" />
    <TextView

        android:text="Overall visibility of fonts 0.00%"
        android:id="@+id/Textmanlualprecentage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="450dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:text="Compaire Background and Font color"
        android:background="@color/colorPrimary"
        android:layout_marginTop="395dp"
        android:textColor="@color/white"
        android:id="@+id/cal2"
        android:layout_marginRight="23dp"
        android:layout_alignRight="@+id/Textmanlualprecentage"
        android:layout_alignEnd="@+id/Textmanlualprecentage"
        android:layout_alignBottom="@+id/btncal" />

</RelativeLayout>
